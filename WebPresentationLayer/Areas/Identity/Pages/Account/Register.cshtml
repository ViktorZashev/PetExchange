@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}
<div class="container">
	<div class="site-card">
		<div class="row">
			<div class="col-12 col-md-8">
				<section class="site-card-left">
					<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
						<div class="card">
							<div class="card-body">
								<h2>Регистрирай се</h2>
								<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
								<div class="row mb-3">
									<div class="col-12 col-md-6">
										<label asp-for="Input.Username"></label>
										<input asp-for="Input.Username" class="form-control" />
										<span asp-validation-for="Input.Username" class="text-danger"></span>
									</div>
									<div class="col-12 col-md-6">
										<label asp-for="Input.Email"></label>
										<input asp-for="Input.Email" class="form-control" />
										<span asp-validation-for="Input.Email" class="text-danger"></span>
									</div>
								</div>
								<div class="row mb-3">
									<div class="col-12 col-md-6">
										<label asp-for="Input.Password"></label>
										<input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
										<span asp-validation-for="Input.Password" class="text-danger"></span>
									</div>
									<div class="col-12 col-md-6">
										<label asp-for="Input.ConfirmPassword"></label>
										<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
										<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
									</div>
								</div>
								<div class="mb-3">
									<label asp-for="Input.TownId">Град</label>
									<select class="form-select" asp-for="Input.TownId" asp-items="@(new SelectList(Model.TownOptions,"Value","Label"))">
										<option value=null selected>избери град</option>
									</select>
									<span asp-validation-for="Input.TownId" class="text-danger"></span>
								</div>
							</div>
							<div class="card-footer">
								<button id="registerSubmit" type="submit" class="btn btn-primary w-100 btn-lg" style="width:200px;">Регистрация</button>
							</div>
						</div>
					</form>
				</section>
			</div>
			<div class="d-none d-md-block col-md-4">
				<section class="site-card-right">
					<h2>Вече имаш регистрация?</h2>
					<a class="btn btn-secondary w-100 mt-3" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Вход</a>
				</section>
			</div>
		</div>
	</div>
</div>