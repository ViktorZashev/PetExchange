				else
				{
					<ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
						<li><a asp-area="Identity" asp-page="/Account/Register" class="nav-link @(Model.Page == "register" ? "active" : "")">Регистрация</a></li>
						<li><a asp-area="Identity" asp-page="/Account/Login" class="nav-link @(Model.Page == "login" ? "active" : "")">Вход</a></li>
