@model UserManage
@{
	ViewData["Title"] = "Users";
	Layout = "/Views/Shared/_LayoutAdmin.cshtml";
	var towns = (List<Town>)ViewBag.Towns;
	var roles = (List<SelectListItem>)ViewBag.Roles;

}
<h2 class="page-title">Редакция на Потребител</h2>

<form method="post" asp-name="filter" enctype="multipart/form-data">
	<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
	<div class="card">
		<div class="card-body">
			<div class="row">
				<div class="col-6">
					<div class="mb-3">
						<label asp-for="UserName" class="form-label"></label>
						<input asp-for="UserName" class="form-control" />
						<span asp-validation-for="UserName" class="text-danger"></span>
					</div>
				</div>
				<div class="col-6">
					<div class="mb-3">
						<label asp-for="Email" class="form-label"></label>
						<input asp-for="Email" class="form-control" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-6">
					<div class="mb-3">
						<label asp-for="Name" class="form-label"></label>
						<input asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
				</div>
				<div class="col-6">
					<div class="mb-3">
						<label asp-for="PhoneNumber" class="form-label"></label>
						<input asp-for="PhoneNumber" class="form-control" />
						<span asp-validation-for="PhoneNumber" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-6">
					<div class="mb-3">
						<label asp-for="TownId" class="form-label"></label>
						<select asp-for="TownId" asp-items="@(new SelectList(towns, "Id", "Name"))" class="form-select"></select>
						<span asp-validation-for="TownId" class="text-danger"></span>
					</div>
				</div>
				<div class="col-6">
					<div class="mb-3">
						<label asp-for="Role" class="form-label"></label>
						<select asp-for="Role" asp-items="@roles" class="form-select"></select>
						<span asp-validation-for="TownId" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-6">
					<img src="@Model.PhotoPath" class="img-thumbnail" style="max-width:100%;max-height:80px"/>
				</div>
				<div class="col-6">
					<div class="mb-3">
						<label asp-for="Image" class="form-label"></label>
						<input type="file" asp-for="Image" accept=".jpg,.jpeg,.png" class="form-control" />
						<span asp-validation-for="Image" class="text-danger"></span>
					</div>
				</div>
			</div>
		</div>
		<div class="card-footer">
			<button type="submit" class="btn btn-primary me-3">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-floppy" viewBox="0 0 16 16">
					<path d="M11 2H9v3h2z" />
					<path d="M1.5 0h11.586a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14.5v-13A1.5 1.5 0 0 1 1.5 0M1 1.5v13a.5.5 0 0 0 .5.5H2v-4.5A1.5 1.5 0 0 1 3.5 9h9a1.5 1.5 0 0 1 1.5 1.5V15h.5a.5.5 0 0 0 .5-.5V2.914a.5.5 0 0 0-.146-.353l-1.415-1.415A.5.5 0 0 0 13.086 1H13v4.5A1.5 1.5 0 0 1 11.5 7h-7A1.5 1.5 0 0 1 3 5.5V1H1.5a.5.5 0 0 0-.5.5m3 4a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5V1H4zM3 15h10v-4.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5z" />
				</svg>
				Запази
			</button>
			<a href="@ViewBag.CancelUrl" class="btn btn-outline-secondary">Отказ</a>
		</div>
	</div>
</form>
